<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51a9df">

    <ImageButton
        android:id="@+id/btn_course1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:background="#51a9df"
        android:scaleType="centerCrop"
        android:src="@drawable/ara"
        app:layout_constraintEnd_toStartOf="@+id/btn_course2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <!--app:srcCompat="@drawable/ara"-->
    <ImageButton
        android:id="@+id/btn_course2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:background="#51a9df"
        android:scaleType="fitXY"
        android:src="@drawable/hanriver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_course1"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_course3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="#51a9df"
        android:scaleType="fitXY"
        android:src="@drawable/sumjin"
        app:layout_constraintEnd_toStartOf="@+id/btn_course4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_course1"
         />

    <ImageButton
        android:id="@+id/btn_course4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="#51a9df"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_course3"
        app:layout_constraintTop_toBottomOf="@+id/btn_course2"
        android:src="@drawable/nakdongriver"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:text="코스 선택"
        android:textSize="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="한강종주자전거길"
        android:textSize="8.5pt"
        app:layout_constraintEnd_toEndOf="@+id/btn_course2"
        app:layout_constraintStart_toStartOf="@+id/btn_course2"
        app:layout_constraintTop_toBottomOf="@+id/btn_course2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="아라자전거길"
        android:textSize="8.5pt"
        app:layout_constraintEnd_toEndOf="@+id/btn_course1"
        app:layout_constraintStart_toStartOf="@+id/btn_course1"
        app:layout_constraintTop_toBottomOf="@+id/btn_course1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="섬진강자전거길"
        android:textSize="8.5pt"
        app:layout_constraintEnd_toEndOf="@+id/btn_course4"
        app:layout_constraintStart_toStartOf="@+id/btn_course4"
        app:layout_constraintTop_toBottomOf="@+id/btn_course4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="낙동강자전거길"
        android:textSize="8.5pt"
        app:layout_constraintEnd_toEndOf="@+id/btn_course3"
        app:layout_constraintStart_toStartOf="@+id/btn_course3"
        app:layout_constraintTop_toBottomOf="@+id/btn_course3" />

    <Button
        android:id="@+id/btn_ROKMap"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="ROKB Map 이동"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>